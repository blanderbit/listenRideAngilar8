{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@api/*": [
        "app/core/services/api/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@environment/*": [
        "environments/*"
      ],
      "@enums/*": [
        "app/core/enums/*"
      ],
      "@models/*": [
        "app/core/models/*"
      ],
      "@validators/*": [
        "app/core/validators/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "types" : [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
